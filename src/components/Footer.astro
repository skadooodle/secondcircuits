---
const today = new Date();
import { Icon } from "astro-icon/components";
---

<footer
  class="flex flex-col items-center container mx-auto p-10 text-center gap-10 pb-40"
>
  &copy; {today.getFullYear()} Your name here. All rights reserved.
  <div class="flex items-center gap-6 text-5xl">
    <a
      href="https://jramma.com"
      target="_blank"
      class="py-1 pl-3 rounded-md border-1 border-black bg-accent shadow-card hover:shadow-hover transition"
    >
      <Icon name="web" />
    </a>
    <a
      href="https://github.com/jramma"
      target="_blank"
      class="border-1 p-1 border-black rounded-full bg-secondary shadow-card hover:shadow-hover transition"
    >
      <Icon name="github" />
    </a>
    <a
      href="https://www.linkedin.com/in/jramma/"
      target="_blank"
      class="border-1 p-1 border-black rounded-full bg-primary shadow-card hover:shadow-hover transition"
    >
      <Icon name="linkedin" />
    </a>
  </div>
</footer>
